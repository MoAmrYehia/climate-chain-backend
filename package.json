{
  "license": "MIT",
  "name": "nestjs-boilerplate",
  "description": "A boilerplate for a containerised REST NestJS backend utilising Prisma and Auth0",
  "version": "0.0.1",
  "author": "Jonas Schultheiss <jonas.schultheiss@sos-esports.com> (https://jonasschultheiss.dev)",
  "keywords": [
    "boilerplate",
    "nestjs",
    "prisma",
    "postgresql",
    "auth0",
    "docker",
    "docker-compose"
  ],
  "homepage": "https://github.com/jonasschultheiss/nestjs-boilerplate",
  "bugs": {
    "url": "https://github.com/jonasschultheiss/nestjs-boilerplate/issues"
  },
  "private": false,
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "yarn": "^1.22.19"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonasschultheiss/nestjs-boilerplate.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --debug 0.0.0.0:9229 --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "start:migrate:dev": "prisma migrate deploy && yarn start:debug",
    "start:migrate:prod": "prisma migrate deploy && yarn start:prod",
    "start:heroku": "npx prisma migrate deploy && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "doc:generate": "npx compodoc -p tsconfig.json -n 'NestJS Boilerplate'",
    "doc:serve": "yarn doc:generate && npx compodoc -s",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name",
    "prepare": "husky install",
    "release": "release-it"
  },
  "dependencies": {
    "@devoxa/prisma-relay-cursor-connection": "^2.2.2",
    "@golevelup/nestjs-modules": "^0.6.1",
    "@nestjs/common": "^9.0.11",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "^9.0.11",
    "@nestjs/mapped-types": "^1.1.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.11",
    "@prisma/client": "4.3.1",
    "auth0": "^2.42.0",
    "body-parser": "^1.20.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "helmet": "^6.0.0",
    "jwks-rsa": "^2.1.4",
    "jwt-decode": "^3.1.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "swagger-ui-express": "^4.5.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@nestjs/cli": "^9.1.3",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.0.11",
    "@types/auth0": "^2.35.3",
    "@types/express": "^4.17.14",
    "@types/jest": "29.0.2",
    "@types/node": "^18.7.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "8.0.1",
    "jest": "29.0.3",
    "lint-staged": "13.0.3",
    "prettier": "^2.7.1",
    "prisma": "4.3.1",
    "release-it": "^15.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "29.0.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
